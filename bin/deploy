#!/usr/bin/env bash

# Load environment variables from .env file
if [ -f .env ]; then
  echo "Loading secrets from .env file..."
  export $(cat .env | grep -v '^#' | grep -v '^$' | xargs)
else
  echo "Warning: .env file not found. Secrets may not be loaded."
  echo "Create a .env file with KAMAL_REGISTRY_PASSWORD and RESEND_API_KEY"
  exit 1
fi

# Run kamal deploy with all arguments passed through
echo "Running kamal deploy..."
exec bin/kamal deploy "$@"
