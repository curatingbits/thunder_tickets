<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-white">User Management</h1>
      <p class="text-gray-400 mt-1">Manage users and send invitations</p>
    </div>
    <%= link_to new_user_path, class: "btn-primary w-full sm:w-auto" do %>
      <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Invite New User
    <% end %>
  </div>

  <!-- Filters -->
  <div class="card mb-6">
    <div class="flex flex-wrap gap-2">
      <%= link_to "All Users", users_path, class: "px-4 py-2 rounded-lg font-medium transition-colors #{params[:filter].nil? ? 'bg-blue-600 text-white' : 'bg-gray-700 text-gray-300 hover:bg-gray-600'}" %>
      <%= link_to "Active", users_path(filter: "active"), class: "px-4 py-2 rounded-lg font-medium transition-colors #{params[:filter] == 'active' ? 'bg-blue-600 text-white' : 'bg-gray-700 text-gray-300 hover:bg-gray-600'}" %>
      <%= link_to "Inactive", users_path(filter: "inactive"), class: "px-4 py-2 rounded-lg font-medium transition-colors #{params[:filter] == 'inactive' ? 'bg-blue-600 text-white' : 'bg-gray-700 text-gray-300 hover:bg-gray-600'}" %>
      <%= link_to "Pending Invitation", users_path(filter: "pending"), class: "px-4 py-2 rounded-lg font-medium transition-colors #{params[:filter] == 'pending' ? 'bg-blue-600 text-white' : 'bg-gray-700 text-gray-300 hover:bg-gray-600'}" %>
      <%= link_to "Accepted", users_path(filter: "accepted"), class: "px-4 py-2 rounded-lg font-medium transition-colors #{params[:filter] == 'accepted' ? 'bg-blue-600 text-white' : 'bg-gray-700 text-gray-300 hover:bg-gray-600'}" %>
    </div>
  </div>

  <!-- Users List -->
  <div class="card">
    <% if @users.any? %>
      <!-- Desktop Table -->
      <div class="hidden md:block overflow-x-auto">
        <table class="w-full">
          <thead class="border-b border-gray-700">
            <tr>
              <th class="text-left py-3 px-4 text-gray-400 font-semibold">Name</th>
              <th class="text-left py-3 px-4 text-gray-400 font-semibold">Email</th>
              <th class="text-left py-3 px-4 text-gray-400 font-semibold">Status</th>
              <th class="text-left py-3 px-4 text-gray-400 font-semibold">Invited</th>
              <th class="text-right py-3 px-4 text-gray-400 font-semibold">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-700">
            <% @users.each do |user| %>
              <tr class="hover:bg-gray-750">
                <td class="py-4 px-4 text-white font-medium"><%= user.name %></td>
                <td class="py-4 px-4 text-gray-300"><%= user.email %></td>
                <td class="py-4 px-4">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= "bg-#{user.status_badge_color}-900/50 text-#{user.status_badge_color}-400 border border-#{user.status_badge_color}-700" %>">
                    <%= user.status %>
                  </span>
                </td>
                <td class="py-4 px-4 text-gray-400 text-sm">
                  <%= user.invitation_sent_at ? time_ago_in_words(user.invitation_sent_at) + " ago" : "N/A" %>
                </td>
                <td class="py-4 px-4">
                  <div class="flex items-center justify-end gap-2">
                    <%= link_to edit_user_path(user), class: "text-blue-400 hover:text-blue-300 transition-colors" do %>
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                    <% end %>

                    <% if user.invitation_pending? %>
                      <button
                        data-controller="clipboard"
                        data-clipboard-user-id-value="<%= user.id %>"
                        data-action="click->clipboard#copyInvitation"
                        class="text-purple-400 hover:text-purple-300 transition-colors"
                        title="Copy Invitation Link">
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                      </button>

                      <%= button_to resend_invitation_user_path(user), method: :post, class: "text-yellow-400 hover:text-yellow-300 transition-colors", title: "Resend Invitation Email" do %>
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                      <% end %>
                    <% end %>

                    <%= button_to toggle_active_user_path(user), method: :post, class: "text-#{user.active? ? 'red' : 'green'}-400 hover:text-#{user.active? ? 'red' : 'green'}-300 transition-colors", title: "#{user.active? ? 'Deactivate' : 'Activate'} User" do %>
                      <% if user.active? %>
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                        </svg>
                      <% else %>
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Mobile Cards -->
      <div class="md:hidden space-y-4">
        <% @users.each do |user| %>
          <div class="bg-gray-750 rounded-lg p-4 border border-gray-700">
            <div class="flex items-start justify-between mb-3">
              <div class="flex-1">
                <h3 class="text-white font-semibold text-lg"><%= user.name %></h3>
                <p class="text-gray-400 text-sm"><%= user.email %></p>
              </div>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= "bg-#{user.status_badge_color}-900/50 text-#{user.status_badge_color}-400 border border-#{user.status_badge_color}-700" %>">
                <%= user.status %>
              </span>
            </div>

            <div class="text-sm text-gray-400 mb-3">
              <span class="font-medium">Invited:</span> <%= user.invitation_sent_at ? time_ago_in_words(user.invitation_sent_at) + " ago" : "N/A" %>
            </div>

            <div class="flex gap-2">
              <%= link_to "Edit", edit_user_path(user), class: "btn-secondary text-xs flex-1" %>

              <% if user.invitation_pending? %>
                <button
                  data-controller="clipboard"
                  data-clipboard-user-id-value="<%= user.id %>"
                  data-action="click->clipboard#copyInvitation"
                  class="bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2.5 px-4 rounded-lg transition-colors text-xs flex-1">
                  Copy Link
                </button>

                <%= button_to resend_invitation_user_path(user), method: :post, class: "bg-yellow-600 hover:bg-yellow-700 text-white font-semibold py-2.5 px-4 rounded-lg transition-colors text-xs flex-1" do %>
                  Resend Email
                <% end %>
              <% end %>

              <%= button_to toggle_active_user_path(user), method: :post, class: "bg-#{user.active? ? 'red' : 'green'}-600 hover:bg-#{user.active? ? 'red' : 'green'}-700 text-white font-semibold py-2.5 px-4 rounded-lg transition-colors text-xs flex-1" do %>
                <%= user.active? ? "Deactivate" : "Activate" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-300">No users found</h3>
        <p class="mt-1 text-gray-500">Get started by inviting a new user.</p>
        <%= link_to "Invite New User", new_user_path, class: "btn-primary mt-6 inline-flex" %>
      </div>
    <% end %>
  </div>
</div>
