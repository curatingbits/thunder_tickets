<div class="min-h-screen flex items-center justify-center bg-gray-950 py-12 px-4">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-5xl font-bold">
        <span class="text-blue-400">Thunder</span><span class="text-orange-400">Tickets</span>
      </h1>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-100">
        Reset Password
      </h2>
      <p class="mt-2 text-center text-sm text-gray-400">
        Enter your email to receive reset instructions
      </p>
    </div>

    <%= form_with url: password_resets_path, method: :post, class: "mt-8 space-y-6" do %>
      <div>
        <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email address</label>
        <%= email_field_tag :email, nil, placeholder: "admin@thundertickets.com", class: "input-field", required: true, autofocus: true %>
      </div>

      <div>
        <%= submit_tag "Send Reset Instructions", class: "w-full btn-primary text-lg py-3" %>
      </div>

      <div class="text-center">
        <%= link_to "Back to Login", login_path, class: "text-blue-400 hover:text-blue-300 text-sm" %>
      </div>
    <% end %>
  </div>
</div>
