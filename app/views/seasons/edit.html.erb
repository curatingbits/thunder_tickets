<div class="max-w-2xl mx-auto">
  <!-- Header -->
  <div class="mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold text-white">Settings</h1>
    <p class="text-gray-400 mt-2">Configure your season ticket preferences</p>
  </div>

  <!-- Settings Form -->
  <div class="card">
    <%= form_with model: @season, url: settings_path, method: :patch, class: "space-y-6" do |f| %>
      <!-- Season Info -->
      <div class="bg-gray-750 border border-gray-700 rounded-lg p-4">
        <h3 class="text-sm font-medium text-gray-300 mb-3">Current Season</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-sm">
          <div>
            <span class="text-gray-400">Year:</span>
            <span class="ml-2 text-white font-semibold"><%= @season.year %></span>
          </div>
          <div>
            <span class="text-gray-400">Number of Seats:</span>
            <span class="ml-2 text-white font-semibold"><%= @season.num_seats %></span>
          </div>
        </div>
      </div>

      <!-- Seat Section -->
      <div>
        <%= f.label :seat_section, "Seat Section", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.text_field :seat_section, class: "input-field", placeholder: "e.g., 115, 220, 330", autofocus: true %>
        <% if @season.errors[:seat_section].any? %>
          <p class="mt-1 text-sm text-red-400"><%= @season.errors[:seat_section].first %></p>
        <% end %>
        <p class="mt-1 text-sm text-gray-500">Enter your seat section number for reference and future features</p>
      </div>

      <!-- Info -->
      <div class="bg-blue-900/20 border border-blue-700 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <svg class="h-5 w-5 text-blue-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div class="text-sm text-blue-300">
            <p class="font-medium mb-1">Seat Section Configuration</p>
            <p class="text-blue-400">Your seat section is saved for reference and could be used for future pricing or analytics features.</p>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex flex-col sm:flex-row gap-3 pt-4 border-t border-gray-700">
        <%= f.submit "Save Settings", class: "btn-primary w-full sm:w-auto" %>
        <%= link_to "Cancel", root_path, class: "btn-secondary w-full sm:w-auto text-center" %>
      </div>
    <% end %>
  </div>
</div>
