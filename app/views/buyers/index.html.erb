<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
    <div>
      <h1 class="text-3xl sm:text-4xl font-bold text-white">Buyers</h1>
      <p class="text-gray-400 mt-2"><%= @buyers.count %> total buyers</p>
    </div>
    <div>
      <%= link_to "Add New Buyer", new_buyer_path, class: "btn-primary w-full sm:w-auto text-center" %>
    </div>
  </div>

  <!-- Buyers List -->
  <div class="space-y-4">
    <% if @buyers.any? %>
      <% @buyers.each do |buyer| %>
        <div class="card hover:border-blue-500 transition-colors cursor-pointer">
          <%= link_to buyer, class: "block" do %>
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
              <!-- Buyer Info -->
              <div class="flex-1">
                <h3 class="text-lg sm:text-xl font-bold text-white"><%= buyer.name %></h3>
                <% if buyer.email.present? %>
                  <p class="text-sm text-gray-400"><%= buyer.email %></p>
                <% end %>
                <% if buyer.notes.present? %>
                  <p class="text-xs text-gray-500 mt-1 truncate"><%= buyer.notes %></p>
                <% end %>
              </div>

              <!-- Stats -->
              <div class="grid grid-cols-2 gap-4">
                <div class="text-center">
                  <div class="text-xs sm:text-sm text-gray-400">Tickets</div>
                  <div class="text-lg sm:text-xl font-bold text-blue-400"><%= buyer.tickets_count %></div>
                </div>

                <div class="text-center">
                  <div class="text-xs sm:text-sm text-gray-400">Total Spent</div>
                  <div class="text-lg sm:text-xl font-bold text-green-400">$<%= number_with_delimiter(buyer.total_spent.round) %></div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="card text-center py-12">
        <p class="text-gray-400 text-lg">No buyers yet</p>
        <p class="text-sm text-gray-500 mt-2">Create your first buyer to get started</p>
      </div>
    <% end %>
  </div>
</div>
