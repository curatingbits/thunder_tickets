<div class="space-y-4 p-4 bg-gray-900 rounded-lg border border-gray-700"
     data-buyer-form-target="formFields">

  <!-- Error container (hidden by default, shown via JavaScript) -->
  <div class="bg-red-900/50 border border-red-700 rounded-lg p-3 hidden" data-buyer-form-target="errorContainer">
    <p class="text-red-200 text-sm font-semibold mb-1">Error creating buyer:</p>
    <ul class="list-disc list-inside text-red-300 text-xs" data-buyer-form-target="errorList">
    </ul>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <div>
      <label for="buyer_name" class="block text-xs font-medium text-gray-300 mb-1">Name *</label>
      <input type="text"
             id="buyer_name"
             data-buyer-form-target="nameInput"
             class="input-field text-sm"
             placeholder="John Doe">
    </div>

    <div>
      <label for="buyer_email" class="block text-xs font-medium text-gray-300 mb-1">Email (optional)</label>
      <input type="email"
             id="buyer_email"
             data-buyer-form-target="emailInput"
             class="input-field text-sm"
             placeholder="buyer@example.com">
    </div>
  </div>

  <div class="flex gap-2 mt-4">
    <button type="button"
            data-action="click->buyer-form#submitBuyerForm"
            class="btn-success text-sm flex-1">
      Add Buyer
    </button>
    <button type="button"
            data-action="click->buyer-form#cancelForm"
            class="btn-secondary text-sm">
      Cancel
    </button>
  </div>
</div>
