<div class="min-h-screen flex items-center justify-center bg-gray-950 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-5xl font-bold">
        <span class="text-blue-400">MADR</span> <span class="text-orange-400">TICKETS</span>
      </h1>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-100">
        Sign in to your account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-400">
        Manage your Thunder season tickets
      </p>
    </div>

    <%= form_with url: login_path, method: :post, class: "mt-8 space-y-6" do %>
      <div class="rounded-md shadow-sm space-y-4">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email address</label>
          <%= email_field_tag :email, nil, placeholder: "admin@madrtickets.com", class: "input-field", required: true, autofocus: true %>
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-300 mb-2">Password</label>
          <%= password_field_tag :password, nil, placeholder: "Enter your password", class: "input-field", required: true %>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <div class="text-sm">
          <%= link_to "Forgot your password?", new_password_reset_path, class: "font-medium text-blue-400 hover:text-blue-300" %>
        </div>
      </div>

      <div>
        <%= submit_tag "Sign in", class: "w-full btn-primary text-lg py-3" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-500">
      <p>This is an invite-only system</p>
    </div>
  </div>
</div>
