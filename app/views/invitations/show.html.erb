<div class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Logo/Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl sm:text-4xl font-bold mb-2">
        <span class="text-blue-400">MADR</span> <span class="text-orange-400">TICKETS</span>
      </h1>
      <h2 class="text-xl sm:text-2xl font-semibold text-white mb-2">Welcome!</h2>
      <p class="text-gray-400">You've been invited to join MADR TICKETS. Please set your password to get started.</p>
    </div>

    <!-- Invitation Card -->
    <div class="card">
      <%= form_with url: accept_invitation_path(token: params[:token]), method: :patch, class: "space-y-6" do |f| %>
        <!-- User Info -->
        <div class="bg-gray-750 border border-gray-700 rounded-lg p-4">
          <div class="text-sm">
            <div class="mb-2">
              <span class="text-gray-400">Name:</span>
              <span class="ml-2 text-white font-medium"><%= @user.name %></span>
            </div>
            <div>
              <span class="text-gray-400">Email:</span>
              <span class="ml-2 text-white font-medium"><%= @user.email %></span>
            </div>
          </div>
        </div>

        <!-- Password Field -->
        <div>
          <%= label_tag "user[password]", "Password", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= password_field_tag "user[password]", nil, class: "input-field", placeholder: "Enter your password", required: true, autofocus: true, minlength: 6 %>
          <p class="mt-1 text-sm text-gray-500">Must be at least 6 characters</p>
        </div>

        <!-- Password Confirmation Field -->
        <div>
          <%= label_tag "user[password_confirmation]", "Confirm Password", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= password_field_tag "user[password_confirmation]", nil, class: "input-field", placeholder: "Confirm your password", required: true, minlength: 6 %>
        </div>

        <!-- Error Display -->
        <% if @user.errors.any? %>
          <div class="bg-red-900/50 border border-red-700 rounded-lg p-4">
            <div class="flex items-start gap-3">
              <svg class="h-5 w-5 text-red-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div class="text-sm text-red-300">
                <p class="font-medium mb-1">Please fix the following errors:</p>
                <ul class="list-disc list-inside space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Info Box -->
        <div class="bg-blue-900/20 border border-blue-700 rounded-lg p-4">
          <div class="flex items-start gap-3">
            <svg class="h-5 w-5 text-blue-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div class="text-sm text-blue-300">
              <p class="font-medium mb-1">What happens next:</p>
              <ul class="list-disc list-inside space-y-1 text-blue-400">
                <li>Your account will be activated</li>
                <li>You'll be logged in automatically</li>
                <li>You can start managing Thunder tickets</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <%= f.submit "Accept Invitation & Set Password", class: "btn-primary w-full" %>
      <% end %>

      <!-- Back to Login Link -->
      <div class="mt-6 text-center">
        <%= link_to "Back to Login", login_path, class: "text-blue-400 hover:text-blue-300 text-sm" %>
      </div>
    </div>

    <!-- Footer Info -->
    <div class="mt-6 text-center text-sm text-gray-500">
      <p>By accepting this invitation, you'll have access to manage</p>
      <p>Oklahoma City Thunder season tickets</p>
    </div>
  </div>
</div>
