<div class="max-w-2xl mx-auto space-y-6">
  <div>
    <%= link_to "← Back to Game", @game, class: "text-blue-400 hover:text-blue-300 text-sm mb-2 inline-block" %>
    <h1 class="text-4xl font-bold text-white">Edit Game</h1>
    <p class="text-gray-400 mt-2">vs <%= @game.opponent.name %> • <%= @game.game_date.strftime("%B %d, %Y") %></p>
  </div>

  <div class="card">
    <%= form_with model: @game, class: "space-y-6" do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-300 mb-2">Opponent</label>
        <%= f.collection_select :opponent_id, @teams, :id, :name, {}, class: "input-field" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-300 mb-2">Game Date</label>
        <%= f.date_field :game_date, class: "input-field" %>
      </div>

      <% if @game.game_type == "playoff" %>
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Playoff Round</label>
          <%= f.select :playoff_round,
              ["First Round", "Conference Semifinals", "Conference Finals", "NBA Finals"],
              {},
              class: "input-field" %>
        </div>
      <% end %>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Cost Per Ticket</label>
          <%= f.number_field :cost_per_ticket, step: 0.01, class: "input-field" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Parking Cost</label>
          <%= f.number_field :parking_cost, step: 0.01, class: "input-field" %>
        </div>
      </div>

      <div class="flex gap-4 pt-4">
        <%= f.submit "Update Game", class: "btn-primary flex-1" %>
        <%= link_to "Cancel", @game, class: "btn-secondary flex-1 text-center" %>
      </div>
    <% end %>
  </div>
</div>
